<div class="col-sm-3 p-3 border bg-light">
  <h3>To do list</h3>
  <ul class="list-group">
    <% current_user.lists.each do |d| %>
    <li class="list-group-item">
  	  <span class="name"><%= link_to d.title, list_path(d) %></span>
  		  <button class="btn btn-default btn-xs pull-right remove-item">
          <%= link_to '', list_path(d), method: :delete,
          data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-remove' %>
        </button>
        <button class="btn btn-default btn-xs pull-right edit-item">
          <%= link_to '', edit_list_path(d), class: 'glyphicon glyphicon-cog' %>
        </button>
    </li>
    <% end %>
  </ul>
  <%= render 'new' %>
</div>
